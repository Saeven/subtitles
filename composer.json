{
  "name": "saeven/subtitles",
  "description": "Subtitle converter and generator for PHP",
  "type": "library",
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Circlical\\Subtitles\\": "src/"
    }
  },
  "require": {
    "php": "^7.4.0 || ~8.0.12 || ~8.1.0 || ~8.2.0",
    "nesbot/carbon": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "laminas/laminas-coding-standard": "^2.3.0"
  },
  "scripts": {
    "cs": "vendor/bin/phpcs",
    "test": "vendor/bin/phpunit"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
